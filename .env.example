# =========================
# Runtime Mode (IMPORTANT)
# =========================
# Choose ONE:
# - Docker Local DB  -> USE_DOCKER_DB=true
# - Supabase Public  -> USE_PUBLIC_DEV_DB=true

USE_DOCKER_DB=true
USE_PUBLIC_DEV_DB=false
USE_MOCK_EXTERNAL_API=false

# =========================
# Local Database (Docker)
# =========================
DATABASE_URL=postgresql://risqmap:risqmap@db:5432/risqmap_dev

# =========================
# Supabase (Public - Safe)
# =========================
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_NEWS_API_KEY=
# =========================
# Supabase (Server-side)
# =========================
# DO NOT COMMIT REAL VALUE
SUPABASE_SERVICE_ROLE_KEY=

# =========================
# Weather API (Server-side)
# =========================
# Openâ€‘Meteo is used by default and does not require an API key.
# No legacy raster tile provider keys are required or used in this repository.

# Optional: OpenFEMA / OpenFEMA API does not require a key for many endpoints,
# but you can add keys or tokens here if using a proxy or paid endpoints.
OPENFEMA_API_KEY=

# =========================
# AI / ML API (Server-side)
# =========================
GEMINI_API_KEY=

# =========================
# Cache / Rate Limit
# =========================
UPSTASH_REDIS_REST_URL=
